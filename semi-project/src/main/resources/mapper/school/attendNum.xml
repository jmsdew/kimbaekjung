<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kimbaekjung.semiproject.school.model.AttendNumDAO">

    <resultMap id="oneResult" type="com.kimbaekjung.semiproject.school.dto.AttendNumDTO">
        <id property="code" column="ATTEND_CODE"/>
        <result property="kind" column="ATTEND_KIND"/>
        <result property="date" column="REGIST_DATE"/>
        <result property="reason" column="REASON"/>
        <result property="status" column="ATTEND_STATUS"/>
    </resultMap>

    <select id="getStudentDetail" resultMap="oneResult">
        SELECT
        ATTEND_KIND,
        REGIST_DATE,
        REASON,
        ATTEND_STATUS
        FROM
        ATTEND
        WHERE
        STUDENT_CODE = #{studentCode}
    </select>



</mapper>







