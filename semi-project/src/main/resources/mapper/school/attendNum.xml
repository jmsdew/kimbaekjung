<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kimbaekjung.semiproject.school.model.AttendNumDAO">

    <resultMap id="schoolResult" type="com.kimbaekjung.semiproject.school.dto.AttendNumDTO">
        <result property="attendKind" column="attend_kind"/>
        <result property="count" column="count"/>
    </resultMap>

    <select id="getStudentDetail" resultMap="schoolResult">
        SELECT
        attend_kind,
        COUNT(*) AS count
        FROM
        ATTEND
        JOIN
        STUDENT ON student.student_code = attend.student_code
        WHERE
        student.student_code = #{studentCode}
        GROUP BY
        attend_kind;
    </select>



</mapper>